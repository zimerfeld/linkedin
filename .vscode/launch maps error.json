{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Frontend",
            "type": "chrome",
            "request": "launch",            
            "url": "http://http://127.0.0.1:5500/",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/*",
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*",
                "/*": "*",
                "/./~/*": "${workspaceFolder}/node_modules/*"
            }
        }
    ]
}